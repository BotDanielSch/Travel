<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "Toggle"
        on_state: root.on_toggle_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "click here"
        on_press: root.on_button_click()
        disabled: root.countb
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0, 0, 1
    Switch:
        id: my_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: my_slider
        min: 0
        max: 100
        # on_value: root.on_slider_value(self)
        value: 50
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "80dp"
            color: 1, 0, 0, 1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: my_input
        text: root.text_input_str
        size_hint: None, 1
        width: "100dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "my name is: " + root.text_input_str
        


